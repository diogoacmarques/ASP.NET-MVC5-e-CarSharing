@model IEnumerable<e_CarSharing.Models.Location>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Localizações</h2>
<br />
<p>
    <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Create","Locations")'">
        <span class="glyphicon glyphicon-plus"></span>&nbsp;Criar&nbsp;Nova
    </button>
</p>
<hr />


@if (Model.Count() != 0)
{
    <table class="table table-bordered table-responsive table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(location => location.LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoogleMapsURL)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationName)
                </td>
                <td>
                    @if (item.GoogleMapsURL == null)
                    {
                    <a class="btn btn-warning btn-sm disabled" value="Localização" >
                        <span class="glyphicon glyphicon-map-marker"></span>&nbsp;Sem Localização
                    </a>
                    }
                    else
                    {
                    <a type="button"  class="btn btn-info btn-sm" href="@item.GoogleMapsURL" value="Localização" target="_blank">
                        <span class="glyphicon glyphicon-map-marker"></span>&nbsp;Ver Localização
                    </a>
                    }
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.LocationId }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h5>Ainda não existem localizações criadas.</h5>
}

    <div>
        <button type="button" class="btn btn-secondary btn-sm" onclick="history.go(-1); return false;" href="#">
            <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;Voltar
        </button>
    </div>
