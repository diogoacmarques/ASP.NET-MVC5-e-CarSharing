@model IEnumerable<e_CarSharing.Models.Model>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Modelos</h2>
<br />
<p>
    <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Create","Models")'">
        <span class="glyphicon glyphicon-plus"></span>&nbsp;Criar&nbsp;Novo
    </button>
</p>
<hr />

@if (Model.Count() != 0)
{
    <table class="table table-bordered table-responsive table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brand.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelName)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ModelId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h5>Ainda não existem modelos criados.</h5>
}
