@using e_CarSharing.Areas.Administration.Models;
@model IEnumerable<e_CarSharing.Areas.Administration.Models.Account>

@{
    ViewBag.Title = "Users";
}
<br />
<h2>Utilizadores</h2>
<br />


<div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
        @ViewBag.typeOfAccountSelected
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        @foreach (var t in ViewBag.typeOfAccount)
        {
            if (t.Value != ViewBag.typeOfAccountSelected)
            {
                <li><a href="@t.Value">@t.Text</a></li>
            }

        }
    </ul>
</div>
<hr />


@if (Model.Count() != 0)
{
    <table class="table table-bordered table-responsive table-responsive table-condensed table-striped">
        <tr>
            <th>
                @Html.DisplayName("UserName")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Id")
            </th>
            <th>
                @Html.DisplayName("Tipo de Conta")
            </th>
            <th>Ações</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h4>Ainda não existem contas do tipo @ViewBag.typeOfAccountSelected criadas...</h4>
}