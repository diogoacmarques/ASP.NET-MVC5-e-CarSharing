@model IEnumerable<e_CarSharing.Models.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<br />
<h2>Marcas</h2>
<br />
<p>
    <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Create","Brands")'">
        <span class="glyphicon glyphicon-plus"></span>&nbsp;Criar&nbsp;Nova
    </button>
</p>
<hr />

@if (Model.Count() != 0)
{
    <table class="table table-bordered table-responsive table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayName("Ações")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandId)
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.BrandId }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.BrandId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h5>Ainda não existem marcas criadas.</h5>
}