@model IEnumerable<e_CarSharing.Areas.Administration.Models.ListAccounts>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Admins</h2>
<br />

<p>
    <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Create","Accounts", new { @area = "Administration" })'">
        <span class="glyphicon glyphicon-plus"></span>&nbsp;Criar&nbsp;Novo
    </button>
</p>
<hr />
@if (Model.Count() != 0)
{
    <table class="table table-bordered table-responsive table-condensed table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th> 
            <th>Ações</th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id, @area = "Administration" })
            </td>
        </tr>
        }

    </table>
}
else
{
    <h4>Ainda não existem administradores criados...</h4>
}
