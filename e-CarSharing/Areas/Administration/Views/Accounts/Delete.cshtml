@model e_CarSharing.Areas.Administration.Models.ListAccounts
<br />
<h3>Deseja eliminar este item?</h3>
<div>
    <div class="form-horizontal">
        <hr />
        @*@if (ViewBag.ShowAlert != null && ViewBag.ShowAlert == true)
        {
            @Html.Partial("_ShowAlert");
        }
        @Html.HiddenFor(model => model.Id)*@

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", disable = "disable" } })
            </div>
            <div class="col-md-pull-1 col-md-5">
                @*@Html.ActionLink("Link P/ Pagina do User", "VerifyAvailablility", "Rents", new { area = "", id = Model.Id }, new { @class = "btn btn-primary btn-large ", target = "_blank" })*@
                <button type="button" class="btn btn-primary " onclick="location.href='@Url.Action("UserProfile","Users", new { id = Model.Id })'">
                    <span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp; Perfil do Proprietário
                </button>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", disable = "disable" } })
            </div>
        </div>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Index","Accounts", new { @area = "Administration"})'">
                <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;Voltar
            </button>
            <button type="submit" value="Eliminar" class="btn btn-secondary btn-sm">
                Eliminar
            </button>
        </div>
    }
</div>
