@model e_CarSharing.Models.Colour

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h3>Deseja eliminar este item?</h3>
<div>
    <hr />
    @if (ViewBag.ShowAlert != null && ViewBag.ShowAlert == true)
    {
        @Html.Partial("_ShowAlert");
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ColourName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ColourName)
        </dd>

    </dl>

    <div class="form-actions no-color">
        <button type="button" class="btn btn-secondary btn-sm" onclick="history.go(-1); return false;" href="#">
            <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;Voltar
        </button>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">
            <span class="glyphicon glyphicon-trash"></span>&nbsp;Elminar
        </button>
    </div>

</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Cor - @Html.DisplayFor(model => model.ColourName) </h4>
                </div>
                <div class="modal-body">
                    <p>
                        Tem a certeza que deseja eliminar este item?

                    </p>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-danger"></span>&nbsp;Eliminar
                    </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                </div>
            </div>

        </div>
    </div>
}
