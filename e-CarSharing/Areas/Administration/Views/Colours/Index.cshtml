@model IEnumerable<e_CarSharing.Models.Colour>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<br />
<h2>Cores</h2>
<br />
<p>
    <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Create","Colours")'">
        <span class="glyphicon glyphicon-plus"></span>&nbsp;Criar&nbsp;Nova
    </button>
</p>
<hr />

@if (Model.Count() != 0)
{
    <table class="table table-bordered table-responsive table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ColourName)
            </th>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayName("Ações")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ColourName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColourId)
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ColourId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h5>Ainda não existem cores criadas.</h5>
}