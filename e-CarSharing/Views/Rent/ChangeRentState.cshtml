@model e_CarSharing.Models.RentViewModelChangeState

@{
    ViewBag.Title = "All Vehicles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rents</h2>


<hr />



<div class="form-horizontal">
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Rent.RentId)
        @*@Html.HiddenFor(model => model.RentStateList)*@

        <div class="form-group">
            @Html.LabelFor(model => model.Rent.RentState.RentStateName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.Rent.RentStateId, Model.RentStateList, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-pull-1 col-md-5">
                <input type="submit" value="Gravar" class="btn btn-default" />
            </div>
        </div>
    }


    <div class="form-group">
        @Html.LabelFor(model => model.Rent.Vehicle, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.Rent.Vehicle.Brand.BrandName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", disable = "disable" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Rent.BeginDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Rent.BeginDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", disable = "disable" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Rent.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Rent.EndDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", disable = "disable" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Rent.PickUpLocationId, "Local de Levantamento ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Rent.PickUpLocation.LocationName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", disable = "disable" } })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Rent.DeliveryLocationId, "Local de Devolução", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Rent.DeliveryLocation.LocationName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", disable = "disable" } })
        </div>
    </div>

</div>
